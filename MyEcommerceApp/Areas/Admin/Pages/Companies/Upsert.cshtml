@page
@model MyEcommerceApp.Areas.Admin.Pages.Companies.UpsertModel
@{
}
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.companyForUpsert.Id != 0? "Edit" : "Create") Company
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row"">
            <input type="hidden" asp-for="companyForUpsert.Id" />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="companyForUpsert.Name" class="form-control border-0 shadow" />
                            <label asp-for="companyForUpsert.Name" class="ms-2"></label>
                            <span asp-validation-for="companyForUpsert.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="companyForUpsert.StreetAddress" class="form-control border-0 shadow" />
                            <label asp-for="companyForUpsert.StreetAddress" class="ms-2"></label>
                            <span asp-validation-for="companyForUpsert.StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="companyForUpsert.City" class="form-control border-0 shadow" />
                            <label asp-for="companyForUpsert.City" class="ms-2"></label>
                            <span asp-validation-for="companyForUpsert.City" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="companyForUpsert.State" class="form-control border-0 shadow" />
                            <label asp-for="companyForUpsert.State" class="ms-2"></label>
                            <span asp-validation-for="companyForUpsert.State" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="companyForUpsert.PostalCode" class="form-control border-0 shadow" />
                            <label asp-for="companyForUpsert.PostalCode" class="ms-2"></label>
                            <span asp-validation-for="companyForUpsert.PostalCode" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="companyForUpsert.PhoneNumber" class="form-control border-0 shadow" />
                            <label asp-for="companyForUpsert.PhoneNumber" class="ms-2"></label>
                            <span asp-validation-for="companyForUpsert.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.companyForUpsert.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-page="Index" class="btn btn-outline-primary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
