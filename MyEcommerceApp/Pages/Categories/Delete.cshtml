@page
@model MyEcommerceApp.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <input type="hidden" asp-for="CategoryForDelete.Id" />
        <div class="mb-3 row p-1">
            <label asp-for="CategoryForDelete.Name" class="p-0"></label>
            <input asp-for="CategoryForDelete.Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="CategoryForDelete.DisplayOrder" class="p-0"></label>
            <input asp-for="CategoryForDelete.DisplayOrder" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</form>
